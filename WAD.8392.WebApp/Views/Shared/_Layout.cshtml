<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WAD._8392.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <header>
            <nav class="navigation navbar navbar-dark navbar-expand-sm navbar-toggleable-sm">
                <div class="container">
                    <a class="navigation__logo" href="#!/"><span class="music_logo text-uppercase">Music</span>Space</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="navigation__link" href="#!/Users">People</a>
                            </li>
                            <li class="nav-item">
                                <a class="navigation__link" href="#!/Users">About</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="navigation__link" href="#!/SignUp">Sign up</a>
                            </li>
                            <li class="nav-item">
                                <a class="navigation__link" href="#!/SignIn">Sign in</a>
                            </li>
                            <li class="nav-item">
                                <a class="navigation__link" href="#!/MyAccount">My Account</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
